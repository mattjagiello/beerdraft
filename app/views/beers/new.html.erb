
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="app/assets/stylesheets/beer.css">
    <title>Beerdraft</title>
</head>
<body>


<div class = "beer_list">
<h1>Add a beer!</h1>

<%= form_for @beer do |f| %>
    <%= f.label "Name:" %>
    <%= f.text_field :name %>
    <br/>
    <br/>
    <%= f.label "Brand:" %>
    <%= f.text_field :brand %>
    <br/>
    <br/>
    <%= f.label "Type:" %>
    <%= f.text_field :style %>
    <br/>
    <br/>
    <%= f.label "ABV:" %>
    <%= f.number_field :abv, in: 4.0..12.0, step: 0.5 %>
    <br/>
    <br/>
    <%= f.label "Strength:" %>
    <%= f.text_field :strength %>
    <br/>
    <br/>
    Select Brewery
    <br>
    <%= f.collection_check_boxes(:id, Brewery.all, :id, :name)%>

    <br/>
    <br/>
    
    <%= f.submit "Add your beer!" %>
  <% end %>